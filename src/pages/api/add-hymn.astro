---
export const partial = true;

let id = ''
let title = ''
let melody = 'not_learned'
let bass = 'not_learned'
let both_hands = 'not_learned'

---
<div class='container'>
    <title>Add Hymn - Joseph Abell</title>
    <h1>Add Hymn</h1>

    <form hx-post="/api/post-hymn" hx-push-url='/hymns' hx-target="#main" class="script_dependant">
        <p>
            <label>
                <input type="number" value={id} name="id" />
                Hymn No.
            </label>
        </p>

        <p>
            <label>
                <input type="text" value={title} name="title" />
                Title
            </label>
        </p>

        <p>
            <label>
                <input type="text" value={melody} name="melody" />
                Melody
            </label>
        </p>

        <p>
            <label>
                <input type="text" value={bass} name="bass" />
                Bass
            </label>
        </p>

        <p>
            <label>
                <input type="text" value={both_hands} name="both_hands" />
                Both Hands
            </label>
        </p>

        <p>
            <button type="submit">Submit</button>
        </p>
    </form>
</div>