---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
const {title, description} = Astro.props;

---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
        <meta name="viewport" content="width=device-width" />
		<meta name="generator" content={`${Astro.generator}, HTMX and Alpine`} />
        <meta name="description" content={description} />
		<link rel="stylesheet" href="/stylesheet.css" />
		<script src="https://unpkg.com/htmx.org@1"></script>
		<script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/persist@3.x.x/dist/cdn.min.js"></script>
		<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
		<script defer src="https://cdn.jsdelivr.net/npm/p5@1.9.0/lib/p5.min.js"></script>
		<script defer src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0"></script>
	</head>
	<body
		x-data="{ theme: $persist('firefly') }"
		:class=`{
			firefly: theme === 'firefly',
			blue: theme === 'blue',
			bluedark: theme === 'bluedark',
			magenta: theme === 'magenta',
			magentadark: theme === 'magentadark',
			eucalyptus: theme === 'eucalyptus',
			cabaret: theme === 'cabaret',
		}`
	>
		<Header />
			<slot />
		<Footer />
	</body>
</html>

<style is:global type="scss">
	html {
		font-family: sans-serif;
		-ms-text-size-adjust: 100%;
		-webkit-text-size-adjust: 100%;
	}

	body {
		margin: 0;
		font-family: "Lora", "Georgia", serif;
		font-weight: normal;
		word-wrap: break-word;
		font-kerning: normal;
	}

	html, body {
		min-height: 90vh;
	}

	main {
		min-height: 80vh;
		padding: 20px 0;
	}

	main a {
		text-decoration: none;
	}

	article,
	aside,
	footer,
	header,
	main,
	menu,
	nav,
	section,
	summary {
		display: block;
	}

	a {
		background-color: transparent;
	}

	a:active,
	a:hover {
		outline-width: 0;
	}

	b,
	strong {
		font-weight: inherit;
		font-weight: bolder;
	}

	h1 {
		font-size: 2em;
		margin: 0.67em 0;
	}

	small {
		font-size: 80%;
	}

	img {
		border-style: none;
	}

	svg:not(:root) {
		overflow: hidden;
	}

	code,
	kbd,
	pre,
	samp {
		font-family: monospace, monospace;
		font-size: 1em;
	}

	button,
	.button,
	input,
	select,
	textarea {
		font: inherit;
		margin: 0;
	}

	button,
	.button,
	input {
		overflow: visible;
	}

	button,
	select {
		text-transform: none;
	}

	[type="button"]::-moz-focus-inner,
	[type="submit"]::-moz-focus-inner,
	button::-moz-focus-inner {
		border-style: none;
		padding: 0;
	}

	[type="button"]:-moz-focusring,
	[type="submit"]:-moz-focusring,
	button:-moz-focusring {
		outline: 1px dotted ButtonText;
	}

	textarea {
		overflow: auto;
	}

	[type="checkbox"],
	[type="radio"] {
		box-sizing: border-box;
		padding: 0;
	}

	[type="number"]::-webkit-inner-spin-button,
	[type="number"]::-webkit-outer-spin-button {
		height: auto;
	}

	[type="search"] {
		outline-offset: -2px;
	}

	[type="search"]::-webkit-search-cancel-button,
	[type="search"]::-webkit-search-decoration {
		-webkit-appearance: none;
	}

	::-webkit-input-placeholder {
		color: inherit;
		opacity: 0.54;
	}

	::-webkit-file-upload-button {
		-webkit-appearance: button;
		font: inherit;
	}

	html {
		font: 125%/1.666 "Lora", "Georgia", serif;
		box-sizing: border-box;
		overflow-y: scroll;
	}

	* {
		box-sizing: inherit;
	}

	*:before {
		box-sizing: inherit;
	}

	*:after {
		box-sizing: inherit;
	}

	.container {
		max-width: 80vw;
		margin: 0 auto;
	}

	header,
	main,
	footer,
	a,
	button,
	.button,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		transition: background 0.2s linear, color 0.2s linear;
	}

	button, .button {
        padding: 10px 20px;
        border-radius: 2px;

        font-family: 'Montserrat', sans-serif;
        font-weight: 800;
		border: 0;
    }

	.p5Canvas {
		display: block !important;
		visibility: visible !important;
	}


	/* Header */

    header {
        padding: 0 20px;
        font-family: "Montserrat", sans-serif;
        font-weight: 800;
    
		.primary {
			line-height: 33px;
			display: flex;
			justify-content: space-between;
			align-items: center;
		}

		ul {
			list-style: none;
			margin: 0;
			padding: 0;
		}

		ul + ul {
			display: flex;
			width: 150px;
			justify-content: space-between;
		}

		li {
			margin: 0;
		}
		
		.nav-left li {
			margin-bottom: 0;
		}

		.nav-left ul li a {
			text-decoration: none;
		}

		.secondary {
			padding-bottom: 60px;
		}

		.logo {
			font-size: 3rem;        
		}
	}


    .ctas {
        display: flex;
        list-style: none;
        width: 100%;
        justify-content: center;
    }

    footer {
        padding: 20px 0;
        font-family: 'Montserrat', sans-serif;
        font-weight: 800;

		p:first-child {
			margin-top: 0;
		}
	}

	a {
        line-height: 40px;
        text-decoration: none;
    
		&.cta {
			padding: 20px 40px;
			border-radius: 2px;
			margin: 0 20px;
			font-size: 1.3em;
			font-family: 'Montserrat', sans-serif;
			font-weight: 800;
		}
	}



	main,
	.firefly main {
		color: rgba(0, 0, 0, 0.8);
		background: #fbfce5;

		a {
			color: #c08c63;

			&:hover {
				color: rgba(0, 0, 0, 0.8);
			}

			&.cta {
				color: white;
			}
		}
	}

	table {
        border-collapse: collapse;
    }
    td, th {
        border: 1px solid #999;
        padding: 0.5rem;
    }
    .red_circle, .yellow_circle, .green_circle {
        width: 20px;
        height: 20px;
        border-radius: 20px;
        border: 1px solid grey;
    }
    
    .red_circle {
        background: red;
    }

    .yellow_circle {
        background: #ffff00;
    }

    .green_circle {
        background: #00ff00;
    }

	header,
	.firefly header,
	footer,
	.firefly footer,
	body,
	body.firefly {
		background: #1f323c;
	  	color: #c08c63;
	}

	.cta,
	.firefly .cta,
	button,
	.firefly button {
	  	background: #c08c63;
		color: #fbfce5;
	}

	header a,
	.firefly header a {
		color: #c08c63;
	}

	header a:hover,
	.firefly header a:hover {
		color: #f3f3f3;
	}





	.blue main {
		color: rgba(0, 0, 0, 0.8);
		background: #fbfce5;
	}

	.blue header,
	.blue footer,
	body.blue {
		background: #6495ED; /* Change to a shade of blue, e.g., #6495ED */
		color: #222;
	}

	.blue .cta,
	.blue button {
		background: #6495ED;
		color: #222;
	}

	.blue header a {
		color: #222;
	}

	.blue header a:hover {
		color: #222;
	}




	.bluedark main {
		color: rgba(255, 255, 255, 0.8); /* Change text color to white or a light shade of blue */
		background: #081720; /* Change background to a dark color, e.g., #1f323c */
	}

	.bluedark header,
	.bluedark footer,
	body.bluedark {
		background: #183976; /* Change to a shade of dark blue, e.g., #00008B */
		color: #fff; 
	}

	.bluedark .cta,
	.bluedark button {
		background: #ddd;
		color: #081720; /* Change to a dark color, e.g., #1f323c */
	}

	.bluedark header a {
		color: #ddd;
	}

	.bluedark header a:hover {
		color: #f3f3f3; /* Change to a light color for better contrast, e.g., #f0f8ff */
	}



	.magenta main {
		color: rgba(0, 0, 0, 0.8);
		background: #fbfce5;
	}

	.magenta header,
	.magenta footer,
	body.magenta {
		background: #FF00FF; /* Magenta color */
		color: #fff;
	}

	.magenta .cta,
	.magenta button {
		background: #FF00FF;
		color: #fbfce5;
	}

	.magenta header a {
		color: #fff;
	}

	.magenta header a:hover {
		color: #fff;
	}





	.magentadark main {
		color: rgba(255, 255, 255, 0.8);
		background: #110120;
	}

	.magentadark header,
	.magentadark footer,
	body.magentadark {
		background: #460264;
		color: #fff;
	}

	.magentadark .cta,
	.magentadark button {
		background: #ddd;
		color: #222;
	}

	.magentadark header a {
		color: #ddd;
	}

	.magentadark header a:hover {
		color: #f3f3f3;
	}




	.cabaret main {
		color: rgba(0, 0, 0, 0.8);
		background: #fbfce5;
	}

	.cabaret header,
	.cabaret footer,
	body.cabaret {
		background: #D1007E;
		color: #fffcfc;
	}

	.cabaret .cta,
	.cabaret button {
		background: #D1007E;
		color: #fbfce5;
	}

	.cabaret header a {
		color: #fafafa;
	}

	.cabaret header a:hover {
		color: #ffffff;
	}


	.eucalyptus main {
		color: rgba(0, 0, 0, 0.8);
		background: #e1f8f1;
	}

	.eucalyptus header,
	.eucalyptus footer,
	body.eucalyptus {
		background: #2C9E5B;
		color: #fffcfc;
	}

	.eucalyptus .cta,
	.eucalyptus button {
		background: #2C9E5B;
		color: #f3f3f3;
	}

	.eucalyptus header a {
		color: #fafafa;
	}

	.eucalyptus header a:hover {
		color: #ffffff;
	}
</style>